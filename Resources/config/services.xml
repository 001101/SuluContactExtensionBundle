<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="massive_contact.admin.class">Massive\Bundle\ContactBundle\Admin\MassiveContactAdmin</parameter>
        <parameter key="massive_contact.contact.widgets.main_account.class">Massive\Bundle\ContactBundle\Widgets\MainAccount</parameter>
        <parameter key="massive_contact.contact.widgets.contact_accounts.class">Massive\Bundle\ContactBundle\Widgets\ContactAccounts</parameter>
        <parameter key="massive_contact.contact.widgets.account_info.class">Massive\Bundle\ContactBundle\Widgets\AccountInfo</parameter>
        <parameter key="massive_contact.contact.widgets.contact_info.class">Massive\Bundle\ContactBundle\Widgets\ContactInfo</parameter>
        <parameter key="massive_contact.contact.widgets.main_contact.class">Massive\Bundle\ContactBundle\Widgets\MainContact</parameter>
        <parameter key="massive_contact.contact.widgets.table.class">Massive\Bundle\ContactBundle\Widgets\Table</parameter>
        <parameter key="massive_contact.contact.widgets.toolbar.class">Massive\Bundle\ContactBundle\Widgets\Toolbar</parameter>
        <parameter key="massive_contact.js_config.class">Sulu\Bundle\AdminBundle\Admin\JsConfig</parameter>
        <parameter key="massive_contact.import.class">Massive\Bundle\ContactBundle\Import\Import</parameter>
        <parameter key="massive_contact.data_completer.class">Massive\Bundle\ContactBundle\Import\DataCompleter</parameter>

        <!-- extend account -->
        <parameter key="sulu_contact.account.entity">MassiveContactBundle:Account</parameter>
        <parameter key="sulu_contact.account_factory.class">Massive\Bundle\ContactBundle\Contact\AccountFactory</parameter>
    </parameters>

    <services>
        <service id="massive_contact.admin" class="%massive_contact.admin.class%">
            <argument>%sulu_admin.name%</argument>

            <tag name="sulu.admin"/>
            <tag name="sulu.context" context="admin"/>
        </service>

        <service id="massive_contact.contact.widgets.main_account" class="%massive_contact.contact.widgets.main_account.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="sulu.widget" alias="sulu-contact-main-account"/>
        </service>

        <service id="massive_contact.contact.widgets.contact_accounts" class="%massive_contact.contact.widgets.contact_accounts.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="sulu.widget" alias="sulu-contact-accounts"/>
        </service>

        <service id="massive_contact.contact.widgets.account_info" class="%massive_contact.contact.widgets.account_info.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="string">%sulu_contact.account.entity%</argument>

            <tag name="sulu.widget" alias="sulu-contact-account-info"/>
        </service>

        <service id="massive_contact.contact.widgets.contact_info" class="%massive_contact.contact.widgets.contact_info.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="sulu.widget" alias="sulu-contact-contact-info"/>
        </service>

        <service id="massive_contact.contact.widgets.main_contact" class="%massive_contact.contact.widgets.main_contact.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="string">%sulu_contact.account.entity%</argument>

            <tag name="sulu.widget" alias="sulu-contact-main-contact"/>
        </service>

        <service id="massive_contact.contact.widgets.table" class="%massive_contact.contact.widgets.table.class%">
            <tag name="sulu.widget" alias="sulu-contact-table"/>
        </service>

        <service id="massive_contact.contact.widgets.toolbar" class="%massive_contact.contact.widgets.toolbar.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>

            <tag name="sulu.widget" alias="sulu-contact-toolbar"/>
        </service>

        <service id="massive_contact.import" class="%massive_contact.import.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="sulu_contact.account_manager"/>
            <argument type="service" id="sulu_contact.contact_manager"/>
            <argument type="service" id="sulu_contact.account_factory"/>
            <argument>%sulu_contact.defaults%</argument>
            <argument>%massive_contact.account_types%</argument>
            <argument>%sulu_contact.form_of_address%</argument>
            <argument>%sulu_contact.account.entity%</argument>
        </service>

        <service id="massive_contact.js_config" class="%massive_contact.js_config.class%">
            <tag name="sulu.js_config"/>
            <argument>massive-contact</argument>
            <argument type="collection">
                <argument key="accountTypes">%massive_contact.account_types%</argument>
            </argument>
        </service>

        <service id="massive_contact.data_completer" class="%massive_contact.data_completer.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="sulu_contact.account_repository"/>
        </service>
    </services>

</container>
