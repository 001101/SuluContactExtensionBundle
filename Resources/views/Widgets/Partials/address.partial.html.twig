{% set smallDisplay = (display is not defined or not 'small') ? true : false %}

{% if address is defined %}
    <div {% if smallDisplay %}class="grid-row m-bottom-30"{% endif %}>
        {% if smallDisplay %}
            <h5 class="label"><%=translate('public.address')%></h5>
        {% endif %}
        <span class="block">
            {% if address.street is defined or address.number is defined %}
                {{ address.street }}
                {{ address.number }},
            {% endif %}

            {% if address.zip is defined or address.street is defined %}
                {{ address.zip }}
                {{ address.street }},
            {% endif %}

            {{ address.country }}
        </span>
    </div>
{% endif %}
